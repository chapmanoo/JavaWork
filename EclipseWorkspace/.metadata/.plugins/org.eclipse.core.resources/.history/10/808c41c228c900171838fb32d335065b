
public class Person {
	
	private String name;
	private int age;
	private String jobTitle;
	
	public Person(String name, int age, String jobTitle)
	{
		this.name = name;
		this.age = age;
		this.jobTitle = jobTitle;
	}

	public String toString()
	{
		String newString = null;
		
		newString = "Name: " + name + ". Age: " + age + ". Title: " + jobTitle + ".";
		
		return newString;
	}
}
